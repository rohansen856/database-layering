# Database Shards
DB_SHARD1_URL=postgresql://dbuser:dbpassword@localhost:5453/enterprise_db
DB_SHARD2_URL=postgresql://dbuser:dbpassword@localhost:5454/enterprise_db

# Caches
CACHE_L1_URL=redis://localhost:6390
CACHE_L2_URL=redis://localhost:6391

# Rate Limiter
RATE_LIMITER_URL=redis://localhost:6392

# Connection Pool
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=20

# Cache Configuration
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30

# Authentication
AUTH_ENABLED=true
API_KEY=enterprise-api-key-demo

# Application
ENVIRONMENT=production
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=8001
